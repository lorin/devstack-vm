[[local|localrc]]
# Default passwords
ADMIN_PASSWORD=password
MYSQL_PASSWORD=password
RABBIT_PASSWORD=password
SERVICE_PASSWORD=password
SERVICE_TOKEN=password


SCREEN_LOGDIR=/opt/stack/logs


HOST_IP={{ public_ip }}

FLOATING_RANGE={{ floating_ip_range }}

{% if neutron %}
#
# Enable Neutron
#
# https://wiki.openstack.org/wiki/NeutronDevstack
disable_service n-net
enable_service q-svc
enable_service q-agt
enable_service q-dhcp
enable_service q-l3
enable_service q-meta
enable_service neutron

{% if neutron_lbaasv2 %}
#
# Enable Neutron LBaas v2
#
# https://wiki.openstack.org/wiki/Neutron/LBaaS
enable_plugin neutron-lbaas https://git.openstack.org/openstack/neutron-lbaas {% version %}
enable_plugin octavia https://git.openstack.org/openstack/octavia {% version %}
ENABLED_SERVICES+=,q-lbaasv2
ENABLED_SERVICES+=,octavia,o-cw,o-hk,o-hm,o-api
{% endif %}

{% endif %}

{% if swift %}
# Enable Swift
enable_service s-proxy
enable_service s-object
enable_service s-container
enable_service s-account
{% endif %}

{% if heat %}
enable_service heat
enable_service h-api
enable_service h-api-cfn
enable_service h-api-cw
enable_service h-eng
{% endif %}

{% if not security_groups %}
# Disable security groups entirely
Q_USE_SECGROUP=False
LIBVIRT_FIREWALL_DRIVER=nova.virt.firewall.NoopFirewallDriver
{% endif %}

{% if not tempest %}
disable_service tempest
{% endif %}

{% if app_catalog %}
enable_plugin app-catalog-ui https://git.openstack.org/openstack/app-catalog-ui
{% endif %}
